<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_progress_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <ImageView
        android:id="@+id/iv_complete"
        android:layout_marginTop="2dp"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_gravity="top"
        android:src="@mipmap/right_green"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_msg"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待客户审批"
            android:singleLine="true"
            android:maxEms="6"
            android:textSize="13dp"
            android:textColor="@color/map_text1"/>
        <TextView
            android:id="@+id/tv_estimate"
            android:visibility="gone"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预计完成时间"
            android:textSize="13dp"
            android:textColor="@color/map_text1"/>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_toLeftOf="@+id/iv_progress_next"
        android:layout_marginRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="13dp"/>
    <ImageView
        android:id="@+id/iv_progress_next"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@mipmap/jiantou_hui"/>
</LinearLayout>