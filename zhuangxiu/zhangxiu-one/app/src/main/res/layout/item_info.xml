<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="90dp">
    <TextView
        android:id="@+id/tv_time"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2017年8月8日 13:00"
        android:textSize="12dp"
        android:textColor="@color/et_login_hint"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邓绿普轮胎天河总店"
            android:textSize="16dp"
            android:textColor="@color/text_color1"/>
        <com.jyt.huangguan.view.widget.AlwaysMarqueeTextView
            android:id="@+id/tv_msg"
            android:layout_marginRight="25dp"
            android:layout_below="@id/tv_shopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="该项目进入施工中阶段，点击查看详情"
            android:textSize="14dp"
            android:textColor="@color/map_text1"
            android:singleLine="true"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_next"/>
    </RelativeLayout>

</LinearLayout>