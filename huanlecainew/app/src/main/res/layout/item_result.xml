<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_result">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_result_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="双色球"
            android:textSize="16sp"
            android:textColor="@color/font_black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/tv_result_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第2017105期"
            android:layout_toRightOf="@+id/tv_result_text1"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="40dp"
            android:textSize="13sp"
            android:textColor="@color/font_black"/>
        <TextView
            android:id="@+id/tv_result_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-09-07"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/tv_result_text2"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="40dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/mina_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcy_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_result_text1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">
        </android.support.v7.widget.RecyclerView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"
            android:layout_below="@+id/rcy_result"
            android:layout_marginTop="15dp"></View>
    </RelativeLayout>
</LinearLayout>