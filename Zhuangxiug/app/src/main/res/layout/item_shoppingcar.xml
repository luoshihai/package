<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:padding="10dp">

    <CheckBox
        android:id="@+id/cbSelect"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/$RightProductLayout"
        android:layout_alignTop="@+id/$RightProductLayout" />

    <LinearLayout
        android:id="@+id/$RightProductLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/cbSelect"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:background="#999999" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="top|left"
                android:maxLines="2"
                android:text="产品名称产品名称产品名产品名称产品名称产品名产品名称产品名称产品名"
                android:textColor="@color/main_text_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtProductDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="产品种类,其他信息"
                android:textColor="@color/hint_text_color"
                android:textSize="11sp" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/txtProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="¥ 499.00"
                    android:textColor="#f00"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtProductNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="x 2"
                    android:textColor="@color/hint_text_color"
                    android:textSize="12sp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>