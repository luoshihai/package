                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:scaleType="fitXY"-->
                    <!--android:src="@drawable/login_btn_qq" />-->

            <!--</LinearLayout>-->
        </LinearLayout>
    </LinearLayout>
</ScrollView>