<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:clickable="true"
        android:padding="10dp">

        <ListView
            android:id="@+id/listAttrs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/textView_style_14sp"
                android:layout_marginRight="30dp"
                android:text="价格" />

            <EditText
                android:id="@+id/editMinPrice"
                android:layout_width="80dp"
                android:background="@drawable/shape_border_gray_bg"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:gravity="center" />
            <TextView
                style="@style/textView_style_14sp"
                android:layout_margin="5dp"
                android:text="至" />
            <EditText
                android:id="@+id/editMaxPrice"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:background="@drawable/shape_border_gray_bg"
                android:gravity="center" />
            <TextView
                style="@style/textView_style_14sp"
                android:layout_margin="5dp"
                android:text="元" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labTxt3"
                style="@style/textView_style_14sp"
                android:layout_marginRight="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="品牌" />

            <com.cnsunru.common.widget.TagFlowLayout
                android:id="@+id/brandTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSubmit"
                style="@style/autoHeightBtn"
                android:layout_width="110dp"
                android:layout_marginRight="30dp"
                android:text="确定" />

            <Button
                android:id="@+id/btnCancel"
                style="@style/autoHeightBtn"
                android:layout_width="110dp"
                android:background="@drawable/btn_cancel_bg"
                android:text="取消" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>