    <style name="submitBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/btn_submit_selector</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="autoHeightBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:background">@drawable/btn_submit_selector</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="borderSubmitBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/btn_border_submit_selector</item>
        <item name="android:textColor">@color/submit_btn_bg</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="smallBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/btn_submit_selector</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="fullSubmitBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/btn_fullsubmit_selector</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- 无标题对话框 -->
    <style name="NoTitleDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="BackTitleBarStyle" parent="DefTitleBarStyle">
        <item name="leftIcon">@drawable/icon_goback_black</item>
    </style>

    <style name="BlackBackTitleBarStyle" parent="DefTitleBarStyle">
        <item name="leftIcon">@drawable/icon_goback_black</item>
    </style>

    <style name="WhiteBackTitleBarStyle" parent="DefTitleBarStyle">
        <item name="leftIcon">@drawable/icon_goback_white</item>
    </style>

    <style name="DefTitleBarStyle">
        <item name="backgroundColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/titlebar_height</item>
        <item name="leftVisible">visible</item>
        <item name="leftAsFinish">true</item>
        <item name="titleColor">@color/main_text_color</item>
        <item name="bottomDividerHeight">1dp</item>
    </style>

    <style name="SimpleLabStyle">
        <item name="contentColor">@color/text4</item>
        <item name="contentSize">14sp</item>
        <item name="labColor">@color/main_text_color</item>
        <item name="labSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>

    <style name="DefItemStyle">
        <item name="cBackgroundDrawableRes">@drawable/selec_itemview</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="cLeftTextSize">14sp</item>
        <item name="cLeftTextColor">@color/main_text_color</item>
        <item name="cCenterTextSize">14sp</item>
        <item name="cCenterTextColor">@color/hint_text_color</item>
        <item name="cRightTextColor">@color/hint_text_color</item>
        <item name="cRightTextSize">14sp</item>
        <item name="cRightIconResForDrawableRight">@drawable/icon_more</item>
        <item name="cDividerLineColor">@color/divide_line_out</item>
        <item name="cDividerLineHeight">1dp</item>

    </style>

    <style name="GridPasswordView" />

    <style name="GridPasswordView.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="GridPasswordView.EditText" parent="GridPasswordView.TextView">
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="GridPasswordView.Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/text4</item>
        <item name="android:textColor">@color/text4</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/shape_gray_btnbg</item>
    </style>



    <style name="textView_style_12sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textColorHint">@color/text4</item>
    </style>

    <style name="textView_style_12sp_t4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text4</item>
        <item name="android:textColorHint">@color/text4</item>
    </style>
    <style name="textView_style_14sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textColorHint">@color/text4</item>
    </style>
    <style name="DarkAnimation">
        <item name="android:windowEnterAnimation">@anim/dark_fade_in</item>
        <item name="android:windowExitAnimation">@anim/dark_fade_out</item>
    </style>

    <!--自定义星星-->
    <declare-styleable name="CusRatingBar">
        <!--尺寸值-->
        <attr name="starImageSize" format="dimension" />
        <!--星星间距-->
        <attr name="starPadding" format="dimension" />
        <!--星星总数-->
        <attr name="starCount" format="integer" />
        <!--空白的星星资源文件值-->
        <attr name="starEmpty" format="reference" />
        <!--满星资源文件值-->
        <attr name="starFill" format="reference" />
        <!--半星资源文件值-->
        <attr name="starHalf" format="reference" />
        <!--是否可点击boolean值-->
        <attr name="clickable" format="boolean" />
        <!--当前进度float值-->
        <attr name="starStep" format="float" />
        <!--每次进度方式的值，整星还是半星-->
        <attr name="stepSize">
            <enum name="Half" value="0" />
            <enum name="Full" value="1" />
        </attr>
    </declare-styleable>

</resources>
