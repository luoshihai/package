<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/hint_text_color</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:textViewStyle">@style/textview_nopadding</item>
        <item name="android:editTextStyle">@style/appEditStyle</item>
        <item name="android:elevation">0dp</item>
    </style>


    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/ic_splash</item>
    </style>

    <style name="appEditStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColorHint">@color/text5</item>
    </style>

    <style name="textview_nopadding">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
        <item name="android:fitsSystemWindows">false</item>
    </style>


    <!-- 默认水平分割线样式 -->
    <!--<style name="limit_line">-->
    <!--<item name="android:layout_width">match_parent</item>-->
    <!--<item name="android:layout_height">1px</item>-->
    <!--<item name="android:background">@color/divide_line_out</item>-->
    <!--</style>-->

    <!--10dp的分割线-->

    <!--<style name="common_check_style" parent="Widget.AppCompat.CompoundButton.CheckBox">-->
    <!--<item name="android:button">@null</item>-->
    <!--<item name="android:background">@drawable/common_checkable_selector</item>-->
