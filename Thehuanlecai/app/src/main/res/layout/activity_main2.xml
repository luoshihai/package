<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/img_title"
        android:src="@mipmap/title"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/img_enter_url"
        android:scaleType="fitXY"
        android:background="@mipmap/btn_enter_url"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="40dp" />


    <ImageView
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/img_register"
        android:scaleType="fitXY"
        android:background="@mipmap/btn_register"
        android:layout_alignTop="@+id/img_enter_url"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp" />



    <RelativeLayout
        android:id="@+id/rl_enter_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/img_enter_url">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:id="@+id/img_txt_bg"
            android:background="@mipmap/txt_url_bg"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="  "
            android:id="@+id/btn_go"
            android:background="@android:color/transparent"
            android:layout_alignBottom="@+id/img_txt_bg"
            android:layout_alignRight="@+id/img_txt_bg"
            android:layout_alignEnd="@+id/img_txt_bg" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="http://"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:id="@+id/txt_url"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:textSize="24sp"
            android:layout_gravity="end"
            android:inputType="textUri"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_alignBottom="@+id/btn_go"
            android:layout_toLeftOf="@+id/btn_go"
            android:layout_toStartOf="@+id/btn_go" />
    </RelativeLayout>

</RelativeLayout>
